{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles by provided queries",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of requested article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments relating to the requested article",
    "queries": [],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 18,
          "body": "This morning, I showered for nine minutes.",
          "article_id": 1,
          "author": "butter_bridge",
          "votes": 16,
          "created_at": "2020-07-21T00:20:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an object of posted comment",
    "queries": [],
    "exampleRequest": {
      "username": "lurker",
      "body": "I agree!"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "I agree!",
        "article_id": 13,
        "author": "lurker",
        "votes": 0,
        "created_at": "2020-07-21T00:20:00.000Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an object of updated article",
    "queries": [],
    "exampleRequest": { "inc_votes": 1 },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Living in the shadow of a great man",
        "topic": "mitch",
        "author": "butter_bridge",
        "body": "I find this existence challenging",
        "created_at": "2020-07-09T20:11:00.000Z",
        "votes": 101,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "serves no content when the comment is deleted",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
